<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/areaContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingBottom="100dp"
    android:visibility="visible">

    <TextView
        android:id="@+id/text_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_weight="1"
        android:textAlignment="center"
        android:textSize="20sp"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/inputLayout"
        android:layout_width="match_parent"
        android:layout_height="651dp"
        android:layout_weight="5"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/inputMetricLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="4dp"
            android:paddingRight="4dp">

            <ImageView
                android:id="@+id/soccer1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/soccer"
                app:srcCompat="@drawable/two_tone_sports_soccer_24" />

            <EditText
                android:id="@+id/InputMetricSquareMeter"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:autofillHints="Number"
                android:ems="10"
                android:hint="@string/input_area_square_centimeter"
                android:inputType="numberSigned|number|numberDecimal"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColorHint="#757575"
                android:textSize="16sp"
                android:visibility="visible" />

            <EditText
                android:id="@+id/InputMetricSquareKiloMeter"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:autofillHints="Number"
                android:ems="10"
                android:hint="@string/input_area_square_kilometer"
                android:textAlignment="center"
                android:inputType="numberSigned|number|numberDecimal"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColorHint="#757575"
                android:textSize="16sp"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/soccer8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/soccer"
                app:srcCompat="@drawable/two_tone_sports_soccer_24" />

            <!--            <ImageView-->
<!--                android:id="@+id/soccer2"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:contentDescription="@string/soccer"-->
<!--                android:src="@drawable/twotone_sports_soccer_24"-->
<!--                android:visibility="invisible" />-->

<!--            <EditText-->
<!--                android:id="@+id/InputMetricDunam"-->
<!--                android:layout_width="150dp"-->
<!--                android:layout_height="50dp"-->
<!--                android:layout_marginStart="10dp"-->
<!--                android:layout_marginTop="10dp"-->
<!--                android:layout_marginEnd="10dp"-->
<!--                android:layout_marginBottom="10dp"-->
<!--                android:autofillHints="Number"-->
<!--                android:ems="10"-->
<!--                android:hint="@string/input_area_dunam"-->
<!--                android:inputType="numberSigned|number|numberDecimal"-->
<!--                android:textAppearance="@android:style/TextAppearance.Material.Small"-->
<!--                android:textColorHint="#757575"-->
<!--                android:textSize="16sp"-->
<!--                android:visibility="invisible" />-->


        </LinearLayout>

        <LinearLayout
            android:id="@+id/inputUsaLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="4dp"
            android:paddingRight="4dp">

            <ImageView
                android:id="@+id/football6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/football"
                app:srcCompat="@drawable/two_tone_sports_football_24" />

            <EditText
                android:id="@+id/InputUsaSquareInch"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:autofillHints="Number"
                android:ems="10"
                android:hint="@string/input_area_square_inch"
                android:textAlignment="center"
                android:inputType="numberSigned|number|numberDecimal"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColorHint="#757575"
                android:textSize="16sp"
                android:visibility="visible" />

            <EditText
                android:id="@+id/InputUsaSquareFoot"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:autofillHints="Number"
                android:ems="10"
                android:hint="@string/input_area_square_foot"
                android:textAlignment="center"
                android:inputType="numberSigned|number|numberDecimal"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColorHint="#757575"
                android:textSize="16sp"
                android:visibility="visible" />

            <EditText
                android:id="@+id/InputUsaSquareYard"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:autofillHints="Number"
                android:ems="10"
                android:hint="@string/input_area_square_yard"
                android:textAlignment="center"
                android:inputType="numberSigned|number|numberDecimal"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColorHint="#757575"
                android:textSize="16sp"
                android:visibility="visible" />

            <EditText
                android:id="@+id/InputUsaAcre"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:autofillHints="Number"
                android:ems="10"
                android:hint="@string/input_area_acre"
                android:textAlignment="center"
                android:inputType="numberSigned|number|numberDecimal"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColorHint="#757575"
                android:textSize="16sp"
                android:visibility="visible" />

            <EditText
                android:id="@+id/inputUsaSquareMile"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:autofillHints="Number"
                android:ems="10"
                android:hint="@string/input_area_square_mile"
                android:textAlignment="center"
                android:inputType="numberSigned|number|numberDecimal"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColorHint="#757575"
                android:textSize="16sp"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/football5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/football"
                app:srcCompat="@drawable/two_tone_sports_football_24" />


        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/clearButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:visibility="visible"
        android:background="@drawable/two_tone_delete_black_48"
        />

</LinearLayout>